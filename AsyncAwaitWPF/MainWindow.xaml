<Window x:Class="AsyncAwaitWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwaitWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen">
	<StackPanel Margin="10">
		<Button Click="Start" Content="Start"/>
		<Button Click="StartTaskRun" Content="Start Task"/>
		<Button Click="StartAwait" Content="Start Async Await"/>
		<Button Click="StartHttpClient" Content="HttpClient" Name="Button1"/>
		<Button Click="StartIAsyncEnumerable" Content="IAsyncEnumerable"/>
		<ProgressBar Name="Progress" Maximum="100" Height="30" IsIndeterminate="True"/>
		<ScrollViewer Height="300" Name="Scroll">
			<TextBlock Name="TB" FontSize="18"/>
		</ScrollViewer>
	</StackPanel>
</Window>
